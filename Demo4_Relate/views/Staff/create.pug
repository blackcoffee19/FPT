extends ../layout
block content 
    .container-fluid 
        .row 
            .col-lg-4.col-md-6.mx-auto
                h4.text-center Create new Staff
                if (error)
                    .alert.alert-danger=error 

                form(action="/staff/create" method="POST")
                    .mb-3 
                        label(for="name",class="form-label") Name:
                        input(type="text",class="form-control", name="name")
                    .mb-3 
                        label(for="role",class="form-label") Role:
                        input(type="text",class="form-control", name="role")
                    .mb-3 
                        label(for="salary",class="form-label") Salary (VND) :
                        input(type="text",class="form-control", name="salary",placeholder="vd: 1 000 000 VND")
                    .row 
                        input(type="submit", value="Submit",class="btn btn-primary col-3 mx-auto")
