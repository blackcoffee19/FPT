extends ../layout 
block content 
    .container-fluid
        .row    
            .col-md-12.col-lg-6.mx-auto 
                h3 Update Project 
                hr
                if(error)
                    .alert.alert-danger=error 
                if(message)
                    .alert.alert-success=message 
                form(action=`/project/update/${project._id}`,method="POST")
                    .row.my-3
                        label(for="name",class="col-4 col-form-label") Project's name 
                        .col-8
                            input(type="text",name="name",class="form-control",value=project.name)
                    .row.mb-3 
                        label(for="staffs",class="col-3 col-form-label") Staff
                        .col-9
                            if staffs.length == 0 
                                .alert.alert-danger There are no staff 
                            else
                                each staff in staffs    
                                    .form-check.form-check-inline
                                        if project.projectstaffs.includes(staff._id)
                                            input(type="checkbox", name="staffs", value=staff._id,class="form-check-input",id=staff._id,checked) 
                                        else 
                                            input(type="checkbox", name="staffs", value=staff._id,class="form-check-input",id=staff._id)
                                        label(for=staff._id,class="form-check-label")=staff.name  
                            
                        a(href="/staff/create",class="btn btn-secondary col-3") Add Staff  
                    .row.mb-3 
                        input(type="submit", value="Update",class="btn btn-primary col-3 mx-auto")