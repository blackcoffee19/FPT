@inject IHttpContextAccessor HttpContextAccessor
@model IEnumerable<AccountDto>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List Account</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-6 mx-auto pt-4">
                <h3>List Account</h3>
                @* <p>Hi, <a asp-action="AccountDetail" asp-route-id=@HttpContextAccessor?.HttpContext?.Session.GetInt32("User")>@HttpContextAccessor?.HttpContext?.Session.GetString("Name")</a></p>*@
                 <div class="row mb-3">
                    <div class="col-6">
                        <form method="get" >
                            <div class="input-group">
                                <input type="search" name="search" class="form-control"/>
                                <input type="submit" value="Search" class="btn btn-outline-secondary"/>
                            </div>
                        </form>
                    </div>
                    <a class="col-3 mx-auto btn btn-outline-primary" asp-action="Create">Create New</a>
                </div>
                <hr />
                <div class="row rounded shadow">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(x=>Model.First().Id)</th>
                                <th>@Html.DisplayNameFor(x=>Model.First().Name)</th>
                                <th>@Html.DisplayNameFor(x=>Model.First().Email)</th>
                                <th>@Html.DisplayNameFor(x=>Model.First().Image)</th>
                                <th colspan="2">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(x=>item.Id)</td>
                                        <td>
                                            <a asp-action="AccountDetail" asp-route-id=@item.Id class="text-decoration-none text-dark">
                                                @Html.DisplayFor(x=>item.Name)
                                            @if (item.Admin.Value == true)
                                            {
                                                <div class="ms-2 badge bg-danger">Admin</div>
                                            }
                                            else
                                            {
                                                <div class="ms-2 badge bg-primary">Customer</div>
                                            }
                                            </a>
                                        </td>
                                        <td>@Html.DisplayFor(x=>item.Email)</td>
                                        <td>
                                            <img src="~/Images/@item.Image" class="img-fluid" width="120" alt=@item.Name />
                                        </td>
                                        <td>
                                            <a asp-action="UpdateAccount" asp-route-id=@item.Id>Update</a>
                                        </td>
                                        <td>
                                            <a asp-action="Delete" class="text-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
