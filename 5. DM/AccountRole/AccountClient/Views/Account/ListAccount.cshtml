@model IEnumerable<AccountDto>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListAccount</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 col-lg-5 mx-auto">
                <h3 class="mt-5 text-center">List Account</h3>
                <hr />
                <a asp-action="Create" class="btn btn-outline-primary my-2">Create New</a>
                <table class="table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(x=>Model.First().Email)</th>
                            <th>@Html.DisplayNameFor(x=>Model.First().Fullname)</th>
                            <th>@Html.DisplayNameFor(x=>Model.First().Role)</th>
                            <th colspan="2" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(x=>item.Email)</td>
                                    <td>@Html.DisplayFor(x=>item.Fullname)</td>
                                    <td>@if (item.Role == 0)
                                        {
                                            <div class="badge bg-success">Customer</div>
                                        }
                                        else
                                        {
                                            <div class="badge bg-danger">Admin</div>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Update" asp-controller="Account" asp-route-email="@item.Email" class="text-warning">Edit</a>
                                    </td>
                                    <td>
                                        <a class="text-danger" asp-action="Delete" asp-route-email="@item.Email" onclick="return confirm('Do you want to delete this account? Remind you can not delete Admin.');" >Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center h3">No data</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
