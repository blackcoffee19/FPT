@model IEnumerable<EmployeeDto>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List Employee</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-6 pt-5 mx-auto">
                <h3 class="text-center">List Employee</h3>
                <div class="row">
                    <a class="btn btn-primary col-4" asp-action="CreateEmployee">Create New</a>
                </div>
                <hr />
                <table class="mt-3 table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(x=>Model.First().EmployeeId)</th>
                            <th>@Html.DisplayNameFor(x=>Model.First().EmployeeName)</th>
                            <th>@Html.DisplayNameFor(x=>Model.First().Age)</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(x=>item.EmployeeId)</td>
                                    <td>@Html.DisplayFor(x=>item.EmployeeName)</td>
                                    <td>@Html.DisplayFor(x=>item.Age)</td>
                                    <td>
                                        <a asp-action="EditEmployee" asp-route-id=@item.EmployeeId class="btn btnbtn-outline-warning">Edit</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">No data</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
