@model EmployeeDto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-10 mx-auto pt-4">
                <form method="post">
                    <div class="row mb-3">
                        <label asp-for="EmployeeName" class="form-label mb-2"></label>
                        <input asp-for="EmployeeName" class="form-control" />
                        <span asp-validation-for="EmployeeName" class="text-danger"></span>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Password" class="form-label mb-2"></label>
                        <input asp-for="Password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Age" class="form-label mb-2"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <input type="submit" class="btn btn-primary col-3 mx-auto" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
