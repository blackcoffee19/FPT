extends ../layout

block content
    h1(class="my-2 text-center") Update Customer
    form(action=`/customer/update/${customer._id}`,method='post',class="row")
        div(class="col-6 mx-auto")
            div(class="mb-3 row")
                label(for="name",class="col-form-lable col-4") Name 
                div(class="col-8")
                    input(type="text", name='name',class="form-control", value=customer.name)
            div(class="mb-3 row") 
                label(for="email",class="col-form-label col-4") Email 
                div(class="col-8")
                    input(type="email", name='email',class="form-control", value=customer.email)
            div(class="mb-3 row")
                label(for="phone",class="col-form-label col-4") Phone 
                div(class="col-8")
                    input(type="text", name='phone',class="form-control", value=customer.phone)
            div(class="row")  
                input(type="submit", value='Submit',class='btn btn-primary col-4 mx-auto') 
