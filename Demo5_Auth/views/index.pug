extends layout

block content
  .container-fluid 
    .row 
      .col-5.mx-auto.mt-1 
        if error
          p.alert.alert-danger=error
        if message
          p.alert.alert-success=message
        h2.text-center.mt-2 Login
        hr 
        form(action="/login", method="post")
          .mb-3 
            label(for="email",class='form-label') Email 
            input(type="email",class='form-control', name="email") 
          .mb-3 
            label(for="password",class='form-label') Password 
            input(type="password",class='form-control', name="password")
          .mb-3.row 
            input(type="submit", value="Login",class="btn btn-primary col-3 mx-auto")
          a.mt-3(href="/create",class="text-decoration-none") Create new account 