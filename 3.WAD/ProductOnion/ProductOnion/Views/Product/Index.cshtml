@model IEnumerable<ProductOnion.Models.ProductDto>
@{

}
<h3>List Product</h3>
<a asp-action="Create" >Create new Product</a>
<hr />
<table class="table w-50">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(x=>x.Id)</th>
            <th>@Html.DisplayNameFor(x=>x.Name)</th>
            <th>@Html.DisplayNameFor(x=>x.Price)</th>
            <th>@Html.DisplayNameFor(x=>x.Image)</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() ==0)
        {
            <tr>
                <td colspan="6">No data</td>
            </tr>
        }
        else
        {
            @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(e=>item.Id)</td>
                    <td>@Html.DisplayFor(e=>item.Name)</td>
                    <td>@Html.DisplayFor(e=>item.Price)</td>
                    <td>
                        @if (item.Image != null && item.Image != string.Empty)
                        {
                            <img src="~/Images/@item.Image" class="img-fluid" alt="Image" />
                        }
                    </td>
                    <td>
                        <a asp-action="Update" class="btn btn-warning" asp-route-id=@item.Id>Update</a>
                    </td>
                    <td><a asp-action="Delete" onclick="return confirm('Do you want to delete this Product?');" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        }
    </tbody>
</table>