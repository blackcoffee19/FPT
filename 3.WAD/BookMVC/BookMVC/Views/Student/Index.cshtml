@model IEnumerable<BookMVC.Models.Student> 
@{
    ViewBag.Title = "List Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m=>m.id)</th>
            <th>@Html.DisplayNameFor(m => m.name)</th>
            <th>@Html.DisplayNameFor(m => m.email)</th>
        </tr>
    </thead>
    <tbody>
        @if(Model==null || Model.Count() ==0)
            {
                <tr>
                    <td colspan="3">No data</td>
                </tr>
            }
        else{
            foreach (BookMVC.Models.Student student in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m=>student.id)</td>
                    <td>@Html.DisplayFor(m=>student.name)</td>
                    <td>@Html.DisplayFor(m=>student.email)</td>
                </tr>
            }
        }
    </tbody>
    
</table>